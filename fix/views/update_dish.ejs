<!-- Include header -->
<%- include('include/_header')%>
<!-- /Include header -->

<!--Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Dishes</a>
            </div>            
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Dish</h2>
            <span class="text-light">use the form to Update a Dish to the Menu</span>
        </div>

<!-- Update Dish Form -->
<form method="POST" id="update_dish">
    <div class="new_dish">
        
         <div class="form-group">
            <label for="name" class="text-light"></label>
            <input type="hidden" name="id" value="<% =user._id %>">
            <input type="text" name="name" value="<% =user.name %>" placeholder="Dish title">
        </div>
       
        <div class="form-group">
         <label for="type" class="text-light"></label>
         <input type="text" name="type" value="<% =user.type %>" placeholder="Dish Type">
        </div>
        
        <div class="form-group">
             <label for="price" class="text-light"></label>
             <input type="text" name="price" value="<% =user.price %>" placeholder="Dish Price">
         </div>                
     </div>
     <div class="form-group">
         <button type="submit" class="btn text-dark update">SAVE</button>

     </div>
    </div>
 </form>
<!-- Update Dish formr -->

    </div>
    </main>
